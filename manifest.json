{
    "manifest_version": 3,
    "name": "Inline Code Editor",
    "version": "1.0",
    "description": "Turn a focused element into an Editor.",
    "permissions": ["storage", "contextMenus", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["ace/ace.js", "ace/ext-modelist.js", "ace/mode-java.js", "ace/snippets/java.js", "ace/mode-javascript.js", "ace/worker-javascript.js", "ace/snippets/javascript.js", "ace/ext-language_tools.js", "ace/theme-github.js", "ace/ext-inline_autocomplete.js", "content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["ace/**"],
        "matches": ["<all_urls>"]
      }
    ]
}
  